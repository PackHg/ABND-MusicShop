<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="GridViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/activity_margin</item>
        <item name="android:columnWidth">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:background">@color/colorGray300</item>
    </style>

    <style name="PurposeScrollViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/textview_purpose_height</item>
        <item name="android:layout_weight">3</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PurposeTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin_half</item>
        <item name="android:layout_marginRight">@dimen/activity_margin_half</item>
    </style>

    <style name="VerticalButtonsLinearLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin_half</item>
        <item name="android:layout_marginStart">@dimen/activity_margin_half</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalButtonsLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/activity_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
