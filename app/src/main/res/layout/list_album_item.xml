<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a single list album item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_album_item_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/album_number"
        android:layout_width="@dimen/list_album_item_height"
        android:layout_height="@dimen/list_album_item_height"
        android:background="@color/colorLime800"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        tools:text="Album" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/album_number"
        android:layout_alignRight="@+id/album_number"
        android:layout_alignBottom="@+id/album_number"
        android:src="@drawable/ic_more_vert_white"/>

</RelativeLayout>