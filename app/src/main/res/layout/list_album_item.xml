<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a single list album item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_album_item_height"
    android:padding="@dimen/activity_margin_quarter"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/album_title"
        android:layout_width="@dimen/list_album_item_height"
        android:layout_height="@dimen/list_album_item_height"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"/>

</LinearLayout>