<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a single list album item -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_album_item_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/album_number"
        android:layout_width="@dimen/list_album_item_height"
        android:layout_height="@dimen/list_album_item_height"
        android:background="@color/colorLime800"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        tools:text="Album" />

    <LinearLayout
        android:layout_width="@dimen/list_album_item_height"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_number"
        android:background="@color/colorLime600"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/album_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:padding="@dimen/activity_margin_half"
            android:textColor="@color/colorRed900"
            tools:text="$1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_more_vert_white" />

    </LinearLayout>

</RelativeLayout>