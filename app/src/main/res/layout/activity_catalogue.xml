<?xml version="1.0" encoding="utf-8"?>

<!-- Layout of CatalogueActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    android:orientation="vertical"
    tools:context="com.oz_heng.apps.android.musicshop.CatalogueActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_about_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/catalog_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About this activity \n About this activity \n About this activity \n About this activity  \n About this activity \n About this activity \n About this activity \n About this activity  \n About this activity  \n About this activity  \n About this activity  \n About this activity"
            tools:text="About this activity \n About this activity \n About this activity \n About this activity  \n About this activity  \n About this activity  \n About this activity  \n About this activity" />

    </ScrollView>

    <Button
        android:id="@+id/catalogue_wishlist"
        style="@style/ButtonStyle"
        android:text="@string/wishlist"
        android:layout_marginTop="@dimen/activity_margin"/>

    <!-- GridView for Albums -->
    <GridView
        android:id="@+id/catalogue_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_margin"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />



</LinearLayout>
