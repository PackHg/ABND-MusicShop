<?xml version="1.0" encoding="utf-8"?>

<!-- Layout of CatalogueActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin"
    android:orientation="vertical"
    tools:context="com.oz_heng.apps.android.musicshop.CatalogueActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <ScrollView style="@style/PurposeScrollViewStyle">

            <TextView
                android:id="@+id/catalog_purpose"
                style="@style/PurposeTextViewStyle"
                android:text="@string/catalogue_purpose" />

        </ScrollView>

        <LinearLayout style="@style/VerticalButtonsLinearLayoutStyle">

            <Button
                android:id="@+id/catalogue_goto_wishlist"
                style="@style/ButtonStyle"
                android:text="@string/wishlist" />

        </LinearLayout>

    </LinearLayout>

    <!-- GridView for Albums -->
    <GridView
        android:id="@+id/catalogue_gridview"
        style="@style/GridViewStyle" />

</LinearLayout>
